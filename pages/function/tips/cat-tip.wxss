/* pages/function/tips/cat-tip.wxss */
.container{
    display: flex;
    flex-direction: column;
    align-items: center;
}
.circle-out{
    width: 180px;
    height: 180px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 30rpx 0 30rpx 0; 
    border-radius: 180px;
}
.circle-in{
    width: 160px;
    height: 160px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    border-radius: 160px;
}
.circle-in > image {
    width: 90px;
    height: 90px;
}
.circle-in > text {
    font-size: 25px;
    color: white;
    margin-top: 5px;
}
.container > button {
    width: 80%;
    margin-top: 25rpx;
}
.container > text {
    width: 80%;
    margin-bottom: 20rpx;
}
.finish-btn{
    background-color: #33ccff;
    color: white;
}