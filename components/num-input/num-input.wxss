/* components/num-input/num-input.wxss */
.number-input {
  width: 700rpx;
  height: 60px;
  background-color: white;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #ddd;
}
.input-name{
  width: 200rpx;
}
.input-name > label {
  width: auto;
  font-size: 40rpx;
  font-family: "PingFangSC-Regular", "PingFang SC";
  font-weight: 500;
  font-style: normal;
  text-align: left;
  color: black;
  padding: 0px 5px;
}

.number-input > view {
  height: 40px;
  display: flex;
  align-items: center;
  border-radius: 5px;
}
.input-item {
  padding-left: 20rpx;
  width: auto;
  margin-left: 15rpx;
  /* border: 1px solid gainsboro; */
}

.input-unit {
  color: #797979;
  width: 80rpx;
  margin-left: 15rpx;  
}