/* pages/function/tips/uncomfort-tip.wxss */
.container{
    width: 750rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.tip-card{
    width: 86%;
    margin: 30rpx 0 30rpx 0;
    padding: 10px;
    border-radius: 5px;
    border: 1px solid #ddd;
    box-shadow: 0px 0px 4px 1px #ccc;
}
.tip-card > label {
    font-size: 20px;
    font-weight: bold;
    color: darkred;
}
.tip-card > label ::after{
    content: ':';
    font-size: 20px;
    font-weight: bold;
    color: darkred;
}
.tip-content{
    margin-top: 10rpx;
}