<!-- pages/mine/mine-info/mine-info.wxml -->
<view class="grayback">
    <view class="item">
        <text>姓名</text>
        <view>{{mineInfo.name}}</view>
    </view>
    <view class="item">
        <text>性别</text>
        <view>{{mineInfo.sex}}</view>
    </view>
    <view class="item">
        <text>出生日期</text>
        <view>{{mineInfo.birthDate}}</view>
    </view>
    <view class="item">
        <text>年龄</text>
        <view>{{mineInfo.age}}</view>
    </view>
    <view class="item">
        <text>身高</text>
        <view>{{mineInfo.height}}cm</view>
    </view>
    <view class="item">
        <text>体重</text>
        <view>{{mineInfo.weight}}Kg</view>
    </view>
    <view class="item">
        <text>手机号</text>
        <view>{{mineInfo.phoneNumber}}</view>
    </view>
</view>