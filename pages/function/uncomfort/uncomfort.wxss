.basic-card {
    width: 92vw;
    margin-top: 20rpx;
    padding: 20rpx 10rpx 10rpx 20rpx;   
    background-color: white;
    display: flex;
    flex-direction: column;
    font-family: "PingFangSC-Regular", "PingFang SC";
    border: 1px solid #cccccc;
    border-radius: 5px;
    box-shadow: 0px 0px 4px 1px #ccc;
}
button{
    width: 70%;
    background-color: #33ccff;
    color: white;
    align-self: center;
    margin: 20rpx 0 20rpx 0;
}
textarea{
    width: 92%;
    height: 100rpx;
    align-self: center;
    padding: 10rpx;
    border: 1px solid gray;
    border-radius: 5px;
}
.select-group{
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.select-group > view:first-child{
    width: 30%;
    height: 90rpx;
    font-weight: 500;
    font-size: 20px;
    padding-left: 10rpx;
    display: flex;
    align-items: flex-start;
}
.flex{
    width: 60%;
    display: flex;
    flex-wrap: wrap;
}
.flex-item{
    height: 90rpx;
    line-height: 90rpx;
    flex: 1 0 40%;
    margin: 0 20rpx 20rpx 0;
    text-align: center;
    color: gray;
    border-radius: 5px;
    border: 2px solid gray;
}
.active{
    border: 2px solid #33ccff;
    color: #33ccff;
}