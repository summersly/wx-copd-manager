/* component/home-card-navi/home-card-navi.wxss */
.basic-card {
  width: 43vw;
  height: 200rpx;
  margin-top: 24rpx;
  padding-left: 5px;
  background-color: white;
  display: flex;
  align-items: center;
  justify-content: space-around;
  border: 1px solid #cccccc;
  border-radius: 5px;
  box-shadow: 0px 0px 4px 1px #ccc;
}

.icon {
  width: 28%;
}

.text-content {
  width: 60%;
  height: 80%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.name{
  font-size: 20px;
  font-family: "PingFangSC-Regular", "PingFang SC";
  font-weight: bold;
  /* text-align: center; */
}
.memo{
  font-size: 28rpx;
  color: red;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.disable{
  background-color: #ddd;
  box-shadow:none;

}