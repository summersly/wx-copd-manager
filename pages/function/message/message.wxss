/* pages/function/message/message.wxss */
page {
  background-color: #f1f1f1;
}

.scroll{
  height:100vh;
}

.leftView{
  display: flex; 
  padding: 0 11vw 2vw 3vw;
}

.rightView{
  display: flex; 
  justify-content: flex-end; 
  padding: 0 3vw 2vw 11vw;
}

.leftInfo{
  display: flex;
}

.leftInfo>view{
  font-size: 28rpx;
}

.rightInfo{
  display: flex;
  justify-content: flex-end;
}

.rightInfo>view{
  font-size: 28rpx;
}

.timeMsg{
  margin-left:4vw; 
}

.inputRoom {
  width: 100vw;
  height: 16vw;
  border-top: 1px solid #cdcdcd;
  background-color: #f1f1f1;
  position: fixed;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 20;
}

.sendButton{
  width: 20vw;
  height: 10vw;
  font-size: 36rpx;
  text-align: center;
  vertical-align:middle;
  line-height: 10vw;
  border-radius: 10rpx;
  background-color: #96EB6A;
}

input {
  width: 70vw;
  height: 10vw;
  background-color: #fff;
  border-radius: 40rpx;
  margin-left: 2vw;
  padding: 0 3vw;
  font-size: 28rpx;
  color: #444;
}

.leftMsg {
  font-size: 35rpx;
  color: #444;
  line-height: 7vw;
  padding: 2vw 2.5vw;
  background-color: #fff;
  margin-left: -1.6vw;
  border-radius: 10rpx;
  z-index: 10;
}

.rightMsg {
  font-size: 35rpx;
  color: #444;
  line-height: 7vw;
  padding: 2vw 2.5vw;
  background-color: #96EB6A;
  margin-right: -1.6vw;
  border-radius: 10rpx;
  z-index: 10;
}