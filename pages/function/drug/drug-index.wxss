/* pages/function/drug/drug-index.wxss */
.drug-list{
    width: 100vw;
    display: flex;
    flex-direction: column;
    align-items: center;
    /* margin-left: 5vw; */
}
.left{
    position: absolute;
    left: 68rpx;
    top: 90rpx;
    z-index: -1;
    width: 3px;
    height: 80vh;
    background:linear-gradient(#33ccff,#ccc)
}
.drug-navi{
    width: 650rpx;
    height: 120rpx;
    display: flex;
    align-items: center;
    margin: 10rpx 0 20rpx 0;
}
.drug-navi > view:first-child{
    width: 40rpx;
    height: 40rpx;
    background-color: #ccc;
    border-radius: 10px;
}
.drug-navi > image{
    width: 40rpx;
    height: 40rpx;

}
.context{
    width: 80%;
    height: 100%;
    margin-left: 54rpx;
    display: flex;
    align-items: center;
	border: 1px solid #d8dce5;
}
.context text{
    margin-left: 15rpx;
}
.fix{
    position: fixed;
    bottom: 55rpx;
}