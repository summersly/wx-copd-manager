<!--component/scale-card-navi/scale-card-navi.wxml-->
  <view class='basic-card' bindtap='gotoRoute' style="background:linear-gradient({{model.color[0]}}, {{model.color[1]}})">
    <view class='text-content'>
      <text class='name'>{{ model.name }}</text>
      <text class='memo'>{{ model.memo }}</text>
    </view>
      <image class='icon' mode='aspectFit' src="{{icon}}"/> 
  </view>
