<!-- index.wxml -->
<view class='main-container'>
  <view class="evaluation-card">
    <view class="evaluation-card-circle">
      <canvas canvas-id="canvasCircle"></canvas>
      <canvas canvas-id="canvasArcCir"></canvas>
      <view>
        <text class='evaluation-score'>{{evaluationScore}}</text>
        <text class='evaluation-state'>{{evaluationState}}</text>
      </view>
    </view>
    <view class="evaluation-card-text">
      <text>整体评估</text>
      <text>{{evaluationTip}}</text>
    </view>
  </view>
  <navigator class="scale-card-navi" url="../function/scale/scale-index">
    <view>
      <view class="scale-card-text">
        <text>量表填写</text>
        <text>{{scaleFinish}}/3</text>
      </view>
      <progress percent="{{scaleFinish / 3 * 100}}" stroke-width="6" activeColor="rgba(80, 94, 131, 1)" backgroundColor="white" active="{{true}}" />
    </view>
    <view>
      <image src="https://zju-bmi-assets.oss-cn-beijing.aliyuncs.com/wx-copd-manager/icon/scale.png" mode='aspectFit' class="scale-icon" />
    </view>
  </navigator>
  <home-card-navi wx:for="{{functionCardData}}" wx:key="{{item.name}}" model="{{item}}" />
</view>
