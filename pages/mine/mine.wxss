/* pages/mine/mine.wxss */
.blueback{
    background-color: #33ccff;
    width: 749rpx;
    height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.info-card{
    width: 650rpx;
    height: 700rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 10rpx 0 30rpx 0;
    background-color: white;
    border: 1px solid #eee;
    border-radius: 5px;
}

.item{
    width: 100%;
    height: 140rpx;
    display: flex;
    align-items: center;
    border-bottom: 1px solid #ccc;
}

.item > image{
    width: 30rpx;
    height: 30rpx;
    margin-right: 30rpx;
}

.item > text{
    flex: 3 0 60%;
    margin-left: 30rpx;
}

.info-card > button{
    width: 80%;
    margin-top: 40rpx;
    background-color: #33ccff;
    color: white;
}